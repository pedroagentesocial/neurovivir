---
interface Item { question: string; answer: string }
const { items = [] as Item[] } = Astro.props;
---
<div class="divide-y-2 divide-neuro-title">
  {items.map((qa) => (
    <details class="py-4">
      <summary class="font-heading text-neuro-title cursor-pointer relative pr-8">{qa.question}</summary>
      <p class="mt-2 text-neuro-paragraph">{qa.answer}</p>
    </details>
  ))}
</div>
<style>
summary::-webkit-details-marker{display:none}
summary{list-style:none}
details summary::after{content:"+";position:absolute;right:0;color:currentColor}
details[open] summary::after{content:"âˆ’"}
</style>
