<script type="module">
  const NV = window.NV_LANG || {};
  const getLang = NV.get || (() => 'es');
  const onLangChange = NV.onChange || (() => {});
  const pairs = [
    ['ft-sitemap-es','ft-sitemap-en'],
    ['ft-home-es','ft-home-en'],
    ['ft-therapies-es','ft-therapies-en'],
    ['ft-treatments-es','ft-treatments-en'],
    ['ft-faq-es','ft-faq-en'],
    ['ft-blog-es','ft-blog-en'],
    ['ft-contact-es','ft-contact-en'],
    ['ft-book-es','ft-book-en'],
    ['ft-intake-es','ft-intake-en'],
    ['ft-legal-es','ft-legal-en'],
    ['ft-privacy-es','ft-privacy-en'],
    ['ft-terms-es','ft-terms-en'],
    ['ft-cookies-es','ft-cookies-en'],
    ['ft-contact2-es','ft-contact2-en'],
    ['ft-email-es','ft-email-en'],
    ['ft-phone-es','ft-phone-en'],
    ['ft-city-es','ft-city-en'],
    ['ft-copy-es','ft-copy-en'],
  ];
  const update = (lang) => {
    const es = lang === 'es';
    pairs.forEach(([esId,enId]) => {
      const esEl = document.getElementById(esId);
      const enEl = document.getElementById(enId);
      esEl?.classList.toggle('hidden', !es);
      enEl?.classList.toggle('hidden', es);
    });
  };
  update(getLang());
  onLangChange(update);
</script>
