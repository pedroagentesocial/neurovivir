---
import SectionWrapper from "../common/SectionWrapper.astro";
import FAQ from "../common/FAQ.astro";
interface QA { question: string; answer: string }
const { title = "FAQ", subtitle = "", items = [] as QA[] } = Astro.props;
---
<SectionWrapper>
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
    <div>
      <h2 class="font-heading text-neuro-title text-4xl md:text-5xl">{title}</h2>
      {subtitle && (<p class="text-neuro-paragraph mt-2 text-lg md:text-xl">{subtitle}</p>)}
      <div class="mt-6 flex items-center justify-center">
        <img src={`${import.meta.env.BASE_URL}icons/cerebro-neurovivir.svg`} alt="NeuroVivir" class="w-28 h-28" />
      </div>
    </div>
    <div class="text-lg md:text-xl">
      <FAQ items={items} />
    </div>
  </div>
</SectionWrapper>
