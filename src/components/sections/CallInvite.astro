---
import "../../styles/theme.css";
---
<section class="w-full py-10 md:py-14">
  <div class="mx-auto max-w-6xl px-4">
    <div class="rounded-4xl bg-neuro-title text-white p-6 md:p-8 grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 items-center">
      <div id="ci-es" class="space-y-4">
        <h2 class="font-heading text-3xl md:text-4xl">¿Necesitas hablar con alguien?</h2>
        <p class="text-white/90 text-lg">Agenda una cita o llámanos para orientación inmediata.</p>
        <div class="flex flex-wrap items-center gap-3 pt-1">
        <a href={`${import.meta.env.BASE_URL}book`} class="rounded-4xl bg-neuro-primaryButton text-white px-6 py-3 hover:scale-105 transition-transform">Agendar cita</a>
        </div>
      </div>
      <div id="ci-en" class="space-y-4 hidden">
        <h2 class="font-heading text-3xl md:text-4xl">Need to talk?</h2>
        <p class="text-white/90 text-lg">Book an appointment or call us for guidance now.</p>
        <div class="flex flex-wrap items-center gap-3 pt-1">
        <a href={`${import.meta.env.BASE_URL}book`} class="rounded-4xl bg-neuro-primaryButton text-white px-6 py-3 hover:scale-105 transition-transform">Book appointment</a>
        </div>
      </div>
      <div class="flex justify-center md:justify-end">
        <div class="rounded-[48px] bg-white/10 backdrop-blur-sm p-6 md:p-8 inline-flex items-start gap-4">
          <div class="space-y-2">
            <div class="text-white/90 text-sm">Línea de orientación / Guidance line</div>
            <a href="tel:+15551234567" class="flex items-center gap-2 font-heading text-white text-xl md:text-2xl hover:underline">
              <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" class="text-white"><path d="M22 16.92v3a2 2 0 01-2.18 2 19.86 19.86 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.86 19.86 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72c.13 1 .34 2 .62 2.94a2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.14-1.14a2 2 0 012.11-.45c1 .28 2 .49 2.94.62A2 2 0 0122 16.92z" stroke="currentColor" stroke-width="2"/></svg>
              <span>(555) 123-4567</span>
            </a>
            <div class="flex items-center gap-2 text-white/80 text-sm">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" class="text-white/80"><path d="M12 21s-7-4.35-7-9a7 7 0 0114 0c0 4.65-7 9-7 9z" stroke="currentColor" stroke-width="2"/><circle cx="12" cy="12" r="2" fill="currentColor"/></svg>
              <span>Miami, FL</span>
            </div>
            <a href="mailto:info@neurovivir.com" class="flex items-center gap-2 text-white text-lg md:text-xl hover:underline">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" class="text-white"><path d="M4 6h16v12H4z" stroke="currentColor" stroke-width="2"/><path d="M4 6l8 7 8-7" stroke="currentColor" stroke-width="2"/></svg>
              <span>info@neurovivir.com</span>
            </a>
            <div class="flex items-center gap-3 pt-2">
              <a href="#" aria-label="Instagram" class="p-2 rounded-4xl border-2 border-white/30 hover:scale-105 transition-transform">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" class="text-white"><rect x="3" y="3" width="18" height="18" rx="5" stroke="currentColor"/><circle cx="12" cy="12" r="4" stroke="currentColor"/><circle cx="17.5" cy="6.5" r="1.5" fill="currentColor"/></svg>
              </a>
              <a href="#" aria-label="Facebook" class="p-2 rounded-4xl border-2 border-white/30 hover:scale-105 transition-transform">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" class="text-white"><path d="M14 9h3V6h-3c-2.21 0-4 1.79-4 4v2H8v3h2v6h3v-6h3l1-3h-4v-2c0-.55.45-1 1-1z" fill="currentColor"/></svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="module">
    import { initLang, getLang, onLangChange } from "/src/lib/i18n/languageStore.ts";
    initLang();
    const es = document.getElementById('ci-es');
    const en = document.getElementById('ci-en');
    const update = (lang) => {
      es?.classList.toggle('hidden', lang !== 'es');
      en?.classList.toggle('hidden', lang !== 'en');
    };
    update(getLang());
    onLangChange(update);
  </script>
</section>
