import LegalPage from "../../components/legal/LegalPage.astro";
const introEs = [
  "Tu privacidad importa. Esta política describe qué datos tratamos, con qué fines y cómo los protegemos.",
  "Aplicamos medidas de seguridad proporcionadas y prácticas transparentes. Esta política no sustituye obligaciones legales específicas de clínicas o seguros."
];
const introEn = [
  "Your privacy matters. This policy describes what data we process, for what purposes and how we protect it.",
  "We apply proportionate security measures and transparent practices. This policy does not replace specific legal obligations for clinics or insurers."
];
const sectionsEs = [
  { title: "Categorías de datos", list: ["Uso del sitio: páginas visitadas, tiempos de sesión, dispositivo y navegador","Preferencias: idioma y selección de contenido","Contacto: nombre, email y mensajes que nos envías","Suscripción: correo para envíos informativos","Cookies: ver Aviso de cookies para más detalles"] },
